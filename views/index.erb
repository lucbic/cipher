<form method="post" action="/">
  <div class="form-group">
    <label for="to_cipher">Text</label>
    <textarea name="to_cipher" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <label for="shift">Shift</label>
      <select name="shift" class="form-control" id="shift">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
      </select>
  </div>
  <div class="form-group">
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="direction" id="positive_shift" value="true" checked>
        Positive Shift
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="direction" id="negative_shift" value="false">
        Negative Shift
      </label>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">Cipher</button>
  </div>
</form>


<% if @ciphered %>
  <label for="result">Result</label>
  <div class="alert alert-success">
    <%= @ciphered %>
  </div>
<% end %>
